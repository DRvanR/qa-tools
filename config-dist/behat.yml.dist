# behat.yml
default:
    paths:
        features: features
        bootstrap: %behat.paths.features%/bootstrap

    extensions:
        Behat\MinkExtension\Extension:
            base_url: {{baseUrl}}
            default_session: goutte 
            browser_name: "firefox"
            goutte: ~

ci:
    extensions:
        Behat\MinkExtension\Extension:
            base_url: {{baseUrlCi}}

# The dev
imports:
    - behat.dev.yml
